{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext", "DOM"],
    "module": "ES6",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@utils/*": ["utils/*"],
        "@assets/*": ["assets/*"]
      }


    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "noImplicitAny": false
  },
  "include": ["src", "src/custom.ts", "src/**/*.d.ts"]
}
