{
  "compilerOptions": {
    "allowJs": true,

    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext", "DOM"],
    "module": "ES6",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "noImplicitAny": false
  },
  "include": ["src", "src/custom.ts", "src/**/*.d.ts"]
}
